@model SIGEBI.Application.Dtos.Configuration.PrestamosDtos.PrestamoDto
@using SIGEBI.Domain.Enums

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prestamos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdLibros">Libro</label>
                <select asp-for="IdLibros" class="form-control">
                    <option value="">-- Selecciona un libro --</option>
                    @foreach (var libro in ViewBag.Libros)
                    {
                        <option value="@libro.ISBN">@libro.titulo</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <input asp-for="IdCliente" class="form-control" />
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePrest" class="control-label"></label>
                <input asp-for="DatePrest" class="form-control" />
                <span asp-validation-for="DatePrest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDevol" class="control-label"></label>
                <input asp-for="DateDevol" class="form-control" />
                <span asp-validation-for="DateDevol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()">
                    <option value="">-- Seleccione un Estatus --</option>>>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
