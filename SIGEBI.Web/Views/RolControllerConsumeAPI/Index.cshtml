@model IEnumerable<SIGEBI.Application.Dtos.Configuration.RolDtos.RolGetModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Rol
            </th>
            <th>
                RolStatus
            </th>
            <th>
                IdLgOpRol
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Rol
                </td>
                <td>
                    @item.RolEstatus
                </td>
                <td>
                    @item.IdLgOpRol
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
